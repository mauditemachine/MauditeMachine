.featured-track {
    display: flex;
    flex-direction: column;
    padding: 0;
    width: 100%;
    background: transparent;
    margin-bottom: 40px;
}

.track-player {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.track-cover {
    width: 100%;
    max-width: 1200px;
    height: auto;
    position: relative;
    overflow: hidden;
}

.track-cover img {
    width: 100%;
    height: auto;
    object-fit: cover;
}

.waveform-container {
    width: 100%;
    max-width: 1200px;
    margin-top: -60px;
    position: relative;
    z-index: 2;
}

#waveform {
    background: transparent;
}

.track-info {
    width: 100%;
    max-width: 1200px;
    display: flex;
    align-items: center;
    gap: 20px;
    margin-top: 20px;
}

.play-button {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    border: none;
    background: #fff;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
}

.play-button svg {
    width: 24px;
    height: 24px;
    fill: #000;
}

.track-title {
    font-size: 24px;
    color: #fff;
}

.track-details {
    display: flex;
    align-items: center;
    gap: 20px;
    color: #fff;
}

.release-card {
    width: 100px;
    height: 100px;
    margin: 10px;
    overflow: hidden;
    cursor: pointer !important;
}

.release-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease !important;
}

.release-card:hover img {
    transform: scale(1.1) !important;
}

.releases-container .release-card {
    width: 100px;
    height: 100px;
    margin: 10px;
    overflow: hidden;
    cursor: pointer;
}

.releases-container .release-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.3s ease;
}

.releases-container .release-card:hover img {
    transform: scale(1.1);
}

.releases-section {
    width: 100%;
    margin: 40px 0;
}

.releases-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    margin-top: 20px;
} 